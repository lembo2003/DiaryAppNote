<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingHorizontal="16dp" android:paddingVertical="8dp" android:background="@drawable/note_item_background" android:layout_marginBottom="16dp" android:elevation="3dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">

            <TextView android:id="@+id/tvTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="18sp" android:textFontWeight="700" android:fontFamily="@font/mplusrounded1c" android:textColor="@color/text_primary" android:layout_marginBottom="4dp" android:clipToOutline="true" tools:text="Lovely day"/>

            <TextView android:id="@+id/tvContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:textSize="14sp" android:fontFamily="@font/mplusrounded1c" android:textColor="@color/text_primary" android:clipToOutline="true" tools:text="Today was a lovely day..."/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvImages" android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="horizontal" app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">

        <TextView android:id="@+id/tvDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:textSize="12sp" android:fontFamily="@font/mplusrounded1c" android:textColor="#9DA4AE" tools:text="Tues, July 16, 2024"/>

        <ImageView android:id="@+id/ivFeeling" android:layout_width="24dp" android:layout_height="24dp" android:layout_alignParentEnd="true" android:contentDescription="@string/feeling" android:src="@drawable/ic_feeling_1"/>
    </RelativeLayout>
</LinearLayout> 